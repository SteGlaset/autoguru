mixin carousel(type)
    .carousel.slide(id=`carousel-${type}` data-bs-ride='carousel')
        .carousel-inner
            case type
                when "autopark"
                    each car, i in cars
                        .carousel-item(class= i ? "" : "active")
                            img.autopark-image(src=require(car.imageSrc) alt=car.name)
                            p.autopark-description= car.name
                when "review"
                    each review, i in reviews
                        .carousel-item(class= i ? "" : "active")
                            .wrapper.carousel-wrapper
                                .review-header.d-flex.align-items-center
                                    img.review-avatar(src=require(review.photoSrc) alt=review.name)
                                    span.review-header-text= review.name + ", " + review.age
                                p.review-description= review.description
                when "instructor"
                    each instructor, i in instructors
                        .carousel-item(class= i ? "" : "active")
                            .wrapper.carousel-wrapper
                                img.instructor-image(src=require(instructor.imageSrc) alt=instructor.name)
                                .text-block
                                    p.instructor-name= instructor.name
                                    p.instructor-experience Опыт вождения:
                                        span.instructor-experience-lighter= " " + instructor.experience
                                    p.instructor-description= instructor.description
        button.carousel-control-prev(type='button' data-bs-target=`#carousel-${type}` data-bs-slide='prev')
            svg.carousel-control-prev-icon(aria-hidden='true' width='100%' style='' viewBox='0 0 48 48' fill='none' xmlns='http://www.w3.org/2000/svg')
                rect(width='48' height='48' rx='24' fill='white')
                path(fill-rule='evenodd' clip-rule='evenodd' d='M26.3536 17.6464C26.5488 17.8417 26.5488 18.1583 26.3536 18.3536L20.7071 24L26.3536 29.6464C26.5488 29.8417 26.5488 30.1583 26.3536 30.3536C26.1583 30.5488 25.8417 30.5488 25.6464 30.3536L19.6464 24.3536C19.4512 24.1583 19.4512 23.8417 19.6464 23.6464L25.6464 17.6464C25.8417 17.4512 26.1583 17.4512 26.3536 17.6464Z' fill='#000357')
            span.visually-hidden Previous
        button.carousel-control-next(aria-hidden='true' type='button' data-bs-target=`#carousel-${type}` data-bs-slide='next')
            svg.carousel-control-next-icon(aria-hidden='true' width='100%' style='' viewBox='0 0 48 48' fill='none' xmlns='http://www.w3.org/2000/svg')
                rect(width='48' height='48' rx='24' transform='matrix(-1 0 0 1 48 0)' fill='white')
